<%- include('../partials/head.ejs') %>

    <body class="bg-dark">

        </br>
        </br>
        <br>

        <div class="container col-4 bordered-2x ">
            <% if(typeof errors !='undefined' ) {%>

                <% errors.forEach(error=>{ %>

                    <div class="alert alert-danger alert-sm ">
                        <li>
                            <%= error.message %>
                        </li>
                    </div>

                    <%})%>
                        <%}%>

                            <%if(messages.success_msg) {%>
                                <div class="alert bg-success text-white">
                                    <%= messages.success_msg%>
                                </div>
                                <%}%>


                                    <% if(messages.error){ %>

                                        <div class="alert bg-danger text-white">
                                            <%= messages.error%>
                                        </div>

                                        <% }%>

                                            <div class="card shadow mt-5">

                                                <div class="card-header text-center text-white bg-dark">
                                                    <img src="/img/logo.png" style="height:100px">
                                                    Agenda CMD
                                                </div>
                                                <div class="card-body">
                                                    <form action="/login" method="post">
                                                       
                                                            <div class="form-group input-group">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text"> <i
                                                                            class="fa fa-user"></i> </span>
                                                                </div>
                                                                <input name="email" class="form-control"
                                                                    placeholder="Email" type="text">
                                                            </div>
                                                            <div class="form-group input-group">
                                                                <div class="input-group-prepend">
                                                                  <span class="input-group-text"> <i class="fa fa-key"></i> </span>
                                                                </div>
                                                                <input name="password" class="form-control" placeholder="Senha" type="password">
                                                              </div>
                                                         
                                                        

                                                        <li> <a href="users/redSenha">Redefinir a senha</a></li>

                                                </div>
                                                <div class="card-footer">
                                                  
                                                        <button type="submit"
                                                            class="btn btn-success btn-sm btn-block">Logar</button>
                                                        </form>

                                                        <a href="/" 
                                                                class="btn btn-secondary btn-sm btn-block">Cancelar</button></a>
                                                    </a>
                                                   

                                                </div>

                                            </div>

    </body>