<%- include("../partials/head.ejs") %>

    <body class="bg-dark">
        <div class="container-fluid">
            <div class="row">
                <div class="col-2">
                    <%- include("../partials/aside.ejs")%>
                </div>
                <div class="col-10">
                    <div class="card h-100" id=cardGeral>
                        <div class="card-header">
                            <div class="form-inline">
                                <h5>Lista de Telefones Batalhões</h5>
                                <div class="col-8">
                                    <div class="input-group  float-right ">
                                        <input type="text" class="form-control form-control-sm " placeholder="Buscar..."
                                            aria-label="busca" aria-describedby="button-addon2">
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-info btn-sm" type="button"
                                                id="button-addon2"><i class="fa fa-search"></i></button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="col-12">
                                <div class="row">

                                    <div class="form-group input-group col-4 ">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"> <i class="fa fa-edit"></i> </span>
                                        </div>
                                        <form method="post" action="/contatos/addListBpm">
                                            <input name="dList" class="form-control  form-control-sm "
                                                placeholder="Descrição" type="text">
                                    </div>
                                    <div class="form-group input-group col-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
                                        </div>
                                        <input type="text" class="form-control form-control-sm" name="tList"
                                            onkeypress="$(this).mask('(00)900000000 ')">


                                    </div>
                                    <div class="form-group input-group col-5">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                                        </div>
                                        <input type="email" class="form-control form-control-sm" name="eList">



                                    </div>
                                    <div class="col-12">
                                        <button type="submit" class="btn btn-info btn-sm btn-block">salvar</button>
                                        </form>
                                    </div>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-stripped table-sm ">
                                        <thead>
                                            <tr>
                                                <th>Descrição</th>
                                                <th>Telefone</th>
                                                <th>Email</th>
                                                <th>Ação</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <%- include("../partials/cdn.ejs") %>
    </body>